<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} {%thread} %-5level %logger{50} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="common" level="DEBUG"/>
  <logger name="bootstrap" level="DEBUG"/>
  <logger name="launcher" level="DEBUG"/>
  <logger name="database" level="DEBUG"/>
  <logger name="account" level="DEBUG"/>
  <logger name="logger" level="DEBUG"/>
  <logger name="core" level="DEBUG"/>
  <logger name="game" level="DEBUG"/>
  <logger name="role" level="DEBUG"/>
  <logger name="login" level="DEBUG"/>
  <logger name="rank" level="DEBUG"/>

  <root level="DEBUG">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
